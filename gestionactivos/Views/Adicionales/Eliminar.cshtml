@model AdicionalesModel

<div class="card">
    <div class="card-header">
        Eliminar Adicionales
    </div>
    <div class="card-body">

        <form asp-action="Eliminar" asp-controller="Adicionales" method="post">



            <input asp-for="idAdicional" type="hidden" class="form-control" />

            <div class="alert alert-danger" role="alert">
                Desea eliminar el Articulo: @Html.DisplayTextFor(m => m.Serial) ?
            </div>


            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="Listar" asp-controller="Adicionales" class="btn btn-warning">Volver a la lista</a>
        </form>



    </div>
</div>